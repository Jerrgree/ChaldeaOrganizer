<div class="top-row pl-4 navbar navbar-dark">
    <a class="navbar-brand" href="">ChaldeaOrganizer</a>
    <button class="navbar-toggler" @onclick="ToggleNavMenu">
        <span class="navbar-toggler-icon"></span>
    </button>
</div>

<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <ul class="nav flex-column">
        <li class="nav-item px-3" style="padding-top: 1rem;">
            <NavLink class="nav-link" href="servants">
                <span class="oi oi-person" aria-hidden="true"></span> Servants
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="inventory">
                <span class="oi oi-box"></span> Inventory
            </NavLink>
        </li>
        <li class="nav-item px-3">
            <NavLink class="nav-link" href="event">
                <span class="oi oi-calendar"></span> Event
            </NavLink>
        </li>
    </ul>
</div>

@code {
    bool collapseNavMenu = true;

    string NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }
}
